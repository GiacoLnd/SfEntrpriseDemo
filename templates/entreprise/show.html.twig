{% extends 'base.html.twig' %}

{% block title %}Détail d'une entreprise{% endblock %}

{% block body %}
    <h1>Détail d'une entreprise</h1>
    <h2>{{entreprise}}</h2>
    <p>
        {{entreprise.adresseComplete}}<br>
        créée le : {{entreprise.dateCreation|date('d-m-Y')}}
    </p>
    <h3>Liste des salariés</h3>
    {% if entreprise.employes | length > 0 %}
    <table class="table table-striped d-flex justify-content-center">
        <thead>
            <tr>
                <th>Employé</th>
            </tr>
        </thead>
        <tbody>
        {% for employe in entreprise.employes %}
            <tr><td><a href=" {{path('show_employe', {'id': employe.id}) }}">{{employe}}</a></td></tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>Aucun salarié</p>
    {% endif %}



{% endblock %}